{
  "name": "dynamic-unit-conversion-extension",
  "version": "0.0.1",
  "description": "An example extension for dynamic result types.",
  "private": true,
  "license": "MPLv2",
  "webExt": {
    "build": {
      "overwriteDest": true
    },
    "run": {
      "pref": [
        "extensions.experiments.enabled=true"
      ]
    },
    "ignoreFiles": [
      "*~"
    ],
    "sourceDir": "src"
  },
  "dependencies": {
    "web-ext": "5.2.0"
  },
  "devDependencies": {
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-fetch-options": "0.0.5",
    "eslint-plugin-html": "6.1.0",
    "eslint-plugin-mozilla": "2.8.0",
    "eslint-plugin-no-unsanitized": "3.1.4",
    "eslint-plugin-prettier": "3.1.4",
    "mocha": "^8.1.3",
    "prettier": "1.19.1"
  },
  "scripts": {
    "start": "web-ext run --firefox=nightly --browser-console",
    "lint": "eslint ./src",
    "build": "web-ext build --overwrite-dest --filename firefox-quick-suggest-calculator.xpi",
    "test:unit": "mocha ./tests/unit/"
  }
}
